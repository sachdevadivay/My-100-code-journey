#include <stdio.h>

int main() {
    int n;
    float sum = 0.0;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    int num = 1;  
    int den = 1;  

    for (int i = 1; i <= n; i++) {
        sum += (float)num / den;
        num += 2;     
        den += 2;     
    }

    printf("Approximate sum: %.1f\n", sum);

    return 0;
}
