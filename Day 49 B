#include <stdio.h>
#include <string.h>

int main() {
    char name[100], words[10][50];
    int i = 0, j = 0, k = 0;

    fgets(name, 100, stdin);

    for (i = 0; ; i++) {
        if (name[i] == ' ' || name[i] == '\0' || name[i] == '\n') {
            words[k][j] = '\0';
            k++;
            j = 0;
            if (name[i] == '\0' || name[i] == '\n')
                break;
        } else {
            words[k][j++] = name[i];
        }
    }

    for (i = 0; i < k - 1; i++) {
        printf("%c.", words[i][0]); 
    }

    printf("%s", words[k - 1]); 

    return 0;
}
